<!DOCTYPE html>

<html>
<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

    <div class="row">
        <div class="left"><p></p></div>
        <div class="middle">
            <form action="/rsvp" method="post" id="rsvp-form">
                <input type="text" name="fullname" id="fullname" placeholder="full name" value="<%= fullname %>" />
                <br/>
                <!-- <input type="tel" name="phone" id="phone" placeholder="phone number" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="<%= phone %>" />
                <div class="comment">e.g. 444-444-4444</div> -->
                <input type="tel" name="phone" id="phone" placeholder="phone number" value="<%= phone %>" />
                <br/>
                <input type="email" name="email" id="email" placeholder="email" value="<%= email %>" />
                <br/>
                <div class="radio-wrapper">
                    <input type="radio" name="attending" id="attending" value="yes" <%= attending %> />
                    <div class="radio-text">we'll b there!</div>
                    <br/>
                    <input type="radio" name="attending" id="not-attending" value="no" <%= notAttending %> />
                    <div class="radio-text">we'll b somewhere else :(</div>
                </div>
                <button type="submit" class="submit" id="#rsvp-submit">Submit</button>
            </form>
        </div>
        <div class="right"><p></p></div>
    </div>

    <div class="row">
        <div class="left"><p></p></div>
        <div class="middle">
            <div class="success" style="display: <%= successDisplay %>"><%= successMsg %></div>
            <div class="error-box" style="display: <%= errorDisplay %>">
                <ul class="errors">
                    <%- errorMsg %>
                </ul>
            </div>
        </div>
        <div class="right"><p></p></div>
    </div>

    <%- include('../partials/footer') %>
</body>

</html>